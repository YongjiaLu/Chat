<resources>>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary_lv5</item>
        <item name="colorPrimaryDark">@color/colorPrimary_lv5</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimary_lv5</item>
    </style>

    <style name="AppTheme.Animetion">

        <item name="colorPrimary">@color/colorPrimary_lv4</item>
        <item name="colorPrimaryDark">@color/colorPrimary_lv5</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:activityOpenEnterAnimation">@anim/zoom_in</item>
        <item name="android:activityOpenExitAnimation">@anim/zoom_in</item>
        <item name="android:activityCloseEnterAnimation">@anim/zoom_out</item>
        <item name="android:activityCloseExitAnimation">@anim/zoom_out</item>
    </style>

</resources>
